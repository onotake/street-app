<div class="content_post" style="background-image: url(<%= post.image %>);">
  <div class="more">
    <span><%= image_tag 'arrow_top.png' %></span>
    <ul class="more_list">
      <li>
        <%= link_to '詳細', post_path(post.id), method: :get %>
      </li>
      <% if user_signed_in? && current_user.id == post.user_id %>
      <li>
        <%= link_to '編集', edit_post_path(post.id), method: :get %>
      </li>
      <li>
        <%= link_to '削除', post_path(post.id), method: :delete %>
      </li>
      <% end %>
    </ul>
  </div>
  <%= image_tag post.image.variant(resize: '400x400'), class: 'post-image' if post.image.attached? %>
  <p><%= post.caption %></p>
  <span class="name">
    <a href="/users/<%= post.user.id %>">
      <span>投稿者</span><%= post.user.name %>
    </a>
    <% post.tags.each do |post_tag| %>
      <a href= "/tags/<%= post_tag.id %>">
        <% post.tags.each do |tag| %>
          #<%= tag.tag_name %>
        <%end%>
      </a>
    <% end %>
  </span>
</div>