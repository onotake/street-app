<body>
  <%= yield %>
  <div class="contents row">
    <% @posts.each do |post| %>
      <div class="content_post" style="background-image: url(<%= post.image %>);">
        <div class="more">
          <span><%= image_tag 'arrow_top.png' %></span>
          <ul class="more_list">
            <li>
              <%= link_to '削除', post_path(post.id), method: :delete %>
            </li>
          </ul>
        </div>
        <%= image_tag post.image.variant(resize: '400x400'), class: 'post-image' if post.image.attached? %>
        <p><%= post.caption %></p>
        <span class="name">
        <%= post.user.name %>
        </span>
      </div>
    <% end %>
  </div>
</body>


